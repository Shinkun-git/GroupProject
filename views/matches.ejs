<% layout('layouts/boilerplate') %>
<%- include('./partials/navbar')  %> 
<%- include('./partials/flash')  %> 

<% if(Qtyp=='n'){ %>
  <h3 id="Mtop">Results for "<%= term %>"</h3> 
  <% } %> 

    <div class="container mt-5 mb-3" >
        <div class="row justify-content-center">
            <% for(let obj of resultsARRAY){ %>
                <div class="col-sm-8 col-md-6 col-lg-4 col-xxl-3">
                    <div class="card border-secondary mb-3">
                        <a href="/search/<%= obj.title %>/<%= obj.id %>">
                          <% if(obj.poster_path){ %>
                            <img src="<%= obj.poster_path %>" class="card-img-top" alt="N/A">
                          <% }else{ %>
                            <img src="/resources/noi.jpg" class="card-img-top" alt="N/A">
                            <% } %>
                        </a>
                        <div class="card-body">
                          <h5 class="card-header mb-2" style="width: 95%;"><%= obj.title %></h5>
                          <p class="card-text"><b>Language :</b> "<%= obj.original_language %>"</p>
                          <p class="card-text"><b>Released :</b> <%= obj.release_date %></p>
                          <p class="card-text"><b>Popularity :</b> <%= obj.popularity %></p>
                          <p class="card-text"><b>Avg Vote :</b> <%= obj.vote_average %> <span class="text-muted"><b>~</b><%= obj.vote_count %> voters</span></p>
                          <a href="/search/<%= obj.title %>/<%= obj.id %>" class="btn btn-success">Details</a>
                        </div>
                      </div>
                </div>
                <% } %>
        </div>
    </div>

    <center>
      <button class="btn btn-info"><a href="#Mtop"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-up-square" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
        <path d="M3.544 10.705A.5.5 0 0 0 4 11h8a.5.5 0 0 0 .374-.832l-4-4.5a.5.5 0 0 0-.748 0l-4 4.5a.5.5 0 0 0-.082.537z"/>
      </svg> Go to Top</a></button>
    </center>