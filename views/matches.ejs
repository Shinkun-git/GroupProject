<% layout('layouts/boilerplate') %>

<% if(!term){ %> 
  <h2>Results for " "</h2>
  <% }else{ %>
    <h2>Results for "<%= term %>"</h2> 
    <% } %> 

<% if(!genlist){ %> 
  <h2>Results for genre tags - " "</h2>
  <% }else{ %>
    <h2>Results for genre tags - "<%= genlist %>"</h2> 
    <% } %> 

<h3>movie titles</h3>
    <div class="container">
        <div class="row justify-content-center">
            <% for(let obj of resultsARRAY){ %>
                <div class="col-sm-8 col-md-6 col-lg-4 col-xxl-3">
                    <div class="card">
                        <img src="<%= obj.poster_path %>" class="card-img-top" alt="N/A">
                        <div class="card-body">
                          <h5 class="card-title">Movie title - <%= obj.title %> </h5>
                          <p class="card-text"> in Language : <%= obj.original_language %>  with ID - <%= obj.id %> released- <%= obj.release_date %>   </p>
                          <p class="card-text"> popularity : <%= obj.popularity %>, votes: <%= obj.vote_average %> by <%= obj.vote_count %> voters.  </p>
                          <a href="/search/<%= obj.id %>" class="btn btn-primary">show details</a>
                          <a href="/search/imdb/<%= obj.title %>" class="btn btn-primary">more</a>
                        </div>
                      </div>
                </div>
                <% } %>
        </div>
    </div>