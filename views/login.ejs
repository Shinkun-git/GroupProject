<% layout('layouts/boilerplate') %> 
<%- include('./partials/Hnavbar') %> 

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-7 col-md-6 col-lg-5 p-2">
            <form action="/login" method="post" novalidate class="validateForm">
                <label for="uname" class="form-label">User-Name</label>
                <input type="text" id="uname" class="form-control" name="username" active required>
                <label for="pass" class="form-label">Password</label>
                <input type="password" id="pass" class="form-control" name="password" required>
                <br>
                <button class="btn btn-lg btn-primary">Log in</button>
            </form>
            <br>
            <p>Not yet Registered? <a href="/register">Register</a></p>
        </div>
    </div>
</div>